<table>
  <tr>
    <th>Имя преподавателя</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teachers.each do |teacher| %>
  <tr>
    <td><%= link_to teacher.monkeys_turn, :controller=>'disciplines', :teacher_id=>teacher.id %></td>
    <td><%= link_to 'Прикрепить к дисциплине', new_discipline_path(:teacher_id=>teacher.id) %></td>
    <td><%= link_to 'Изменить', edit_teacher_path(teacher) %></td>
    <td><%= link_to 'Удалить', teacher, :confirm => 'Вы уверенны?', :method => :delete %></td>
  </tr>
<% end %>
</table>

