<h1>Список дисциплин</h1>

<table>
  <tr>
    <th>Название</th>
    <th>Группа</th>
    <th>Преподаватель</th>
    <th></th>
    <th></th>
  </tr>

<% @disciplines.each do |discipline| %>
  <tr>
    <td><%= discipline.discipline_dictionary.name  %></td>
    <td><%= discipline.group.name %></td>
    <td><%= discipline.teacher.monkeys_turn %></td>
    <td><%= link_to 'Изменить', edit_discipline_path(discipline) %></td>
    <td><%= link_to 'Удалить', discipline, :confirm => 'Вы уверенны?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

